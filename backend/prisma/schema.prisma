// Prisma schema file for PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Emergency {
  id              String   @id @default(uuid())
  latitude        Float
  longitude       Float
  placename       String?
  contactno       String?
  accuracy        Float
  timestamp       DateTime
  needs           String[] // Array of strings: ["food", "water"]
  numberOfPeople  Int
  urgencyLevel    String   // low, medium, high, critical
  additionalNotes String?
  status          String   @default("pending") // pending, responded, resolved
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Donor {
  id              String    @id @default(cuid())
  latitude        Float
  longitude       Float
  placename       String?
  contactno       String?
  accuracy        Float?
  items           String[]  // Must match your controller
  availableFrom   DateTime?
  availableUntil  DateTime?
  additionalNotes String?
  createdAt       DateTime  @default(now())
}





