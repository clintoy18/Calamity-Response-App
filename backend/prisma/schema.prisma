generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Emergency {
  id              String   @id
  latitude        Float
  longitude       Float
  accuracy        Float
  timestamp       DateTime
  needs           String[]
  numberOfPeople  Int
  urgencyLevel    String
  additionalNotes String?
  status          String   @default("pending")
  contactno       String?
  placename       String?
  contactPerson   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Donor {
  id              String    @id
  latitude        Float
  longitude       Float
  placename       String?
  contactno       String?
  accuracy        Float?
  items           String[]
  availableFrom   DateTime?
  availableUntil  DateTime?
  additionalNotes String?
  createdAt       DateTime  @default(now())
}
